<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="rgb_cam">
    <pose>0 0 0 0 0 0</pose>

    <link name="rgb_camera_link">
      <sensor name="rgb_camera" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>

        <!-- Base topic; gz-sim will publish image + camera_info under this base -->
        <topic>/camera</topic>

        <camera name="camera">
          <image>
            <width>2304</width>
            <height>1296</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>300</far>
          </clip>
          <!-- Horizontal FOV only; vertical is implied by aspect ratio -->
          <hfov>1.21126</hfov>

          <!-- Optional. Remove if you see warnings. -->
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
            <center>0.5 0.5</center>
          </distortion>
        </camera>
      </sensor>
    </link>
  </model>
</sdf>
