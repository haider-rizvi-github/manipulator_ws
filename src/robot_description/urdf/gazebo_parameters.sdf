<?xml version="1.0"?>

<robot name="my_robot"
  xmlns:xacro="http://ros.org/wiki/xacro">


  <gazebo>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>virtual_joint</joint_name>
      <joint_name>basement_to_base_plate</joint_name>
      <joint_name>base_plate_to_forward_drive_arm</joint_name>
      <joint_name>forward_drive_arm_to_horizontal_arm</joint_name>
      <joint_name>horizontal_arm_to_claw_support</joint_name>
      <joint_name>claw_support_to_gripper_finger_left</joint_name>
      <joint_name>claw_support_to_gripper_finger_right</joint_name>
    </plugin>
  </gazebo>

</robot>